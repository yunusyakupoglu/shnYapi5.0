@model shnYapi5._0.Models.ViewModel.contactViewModel
@{
    ViewData["Title"] = "Iletisim";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@foreach (var item in Model.maps)
{
    <iframe src="@item.stringURL" width="100%" height="450" style="border:0;margin:0;padding:0" allowfullscreen="" loading="lazy"></iframe>
}

<div class="container">
    <div class="row">
        <div class="col-md-6 col-lg-6 col-sm12">
            <div class="row">
                <div class="col-12">
                </div>
            </div>
        </div>
        <div class="col-md-6 col-lg-6 col-sm12">
            <div class="card">
                <br />
                <div class="row">
                    <div class="col-1"></div>
                    <div class="col-10">
                        <ul>
                            @foreach (var item in Model.adresses)
                            {
                                <li>@item.mahalle, @item.sokak, @item.isYeri @item.No @item.ilce/@item.sehir</li>
                            }

                        </ul>
                    </div>
                    <div class="col-1"></div>
                </div>
                <br />
                <div class="row">
                    <div class="col-1"></div>
                    <div class="col-10">
                        <ul>
                            @foreach (var item in Model.mails)
                            {
                                <li>@item.mailAdress</li>
                            }

                        </ul>
                    </div>
                    <div class="col-1"></div>
                </div>
                <br />
                <div class="row">
                    <div class="col-1"></div>
                    <div class="col-10">
                        <ul>
                            @foreach (var item in Model.phones)
                            {
                                <li>0 @item.phoneNumber</li>
                            }

                        </ul>
                    </div>
                    <div class="col-1"></div>
                </div>
                <br />
            </div>
        </div>
    </div>
</div>