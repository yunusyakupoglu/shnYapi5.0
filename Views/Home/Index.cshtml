@model shnYapi5._0.Models.ViewModel.homePageViewModel;

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<style>
    .card:hover {
        box-shadow: -1px 9px 40px -12px #808080;
    }

    .carousel-inner{
        box-shadow: -1px 9px 40px -12px #808080;
    }

    #index {
        background: url(../../wwwroot/img/pngegg.png);
        background-repeat: no-repeat;
        background-size: cover;
    }
</style>

<div id="index">
    <div class="container">
        <div class="row justify-content-center align-items-center">
            <div class="col-lg-10 col-sm-6">
                <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
                    <div class="carousel-inner">
                        @foreach (var item in Model.projes)
                        {
                            <div class="carousel-item @(item == Model.projes.First() ? "active" : "")">
                                <img src="~/resimler/@item.imgYol" style=" width: 100%; height: 100%;">
                            </div>
                        }
                    </div>
                    <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="sr-only">Next</span>
                    </a>
                </div>
            </div>
        </div>
        <br />








        <div class="row justify-content-center">
            @foreach (var item in Model.homeCards)
            {
                <div class="col-lg-6 mb-4">
                    <div class="card bg-dark text-white" style="position:relative; background-position: center; background-size: cover;">
                        <img src="@("~/cardImg/"+item.imgYol)" alt="@item.imgYol" asp-append-version="true" class="img" style="opacity:0.4; overflow:hidden;" />
                        <div class="card-img-overlay">
                            <h5 class="card-title">@item.baslik</h5>
                            <p class="card-text">
                                @item.aciklama
                            </p>
                            <a asp-action="cardDetails" asp-route-id="@item.cardID" class="btn btn-danger" style="position:absolute; bottom:20px; right:20px;">Detaylı Bilgi &rarr;</a>
                        </div>
                    </div>
                </div>
            }
        </div>

        <div class="row">
            <div class="card">
                <div class="card-body">
                    @foreach (var item in Model.paragraphs)
                    {
                        <div class="card-title">
                            <h1 style="color:crimson;">@item.title</h1>
                        </div>
                        <div class="card-text">
                            <P>
                                @item.section1
                            </P>
                            <P>
                                @item.section2
                            </P>
                            <P>
                                @item.section3
                            </P>
                        </div>

                    }
                </div>
            </div>
        </div>
    </div>
    <br />

</div>