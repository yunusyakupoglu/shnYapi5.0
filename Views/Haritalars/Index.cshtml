@model IEnumerable<shnYapi5._0.Entity.Haritalar>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutEdit.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Adres)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.x)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.y)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.aciklama)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Adres)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.x)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.y)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.aciklama)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.haritaID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.haritaID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.haritaID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
