    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_LayoutEdit.cshtml";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>proje</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-12">
            Resim
        </dt>
        <dd class="col-sm-12">
            <img src="@("~/resimler/"+Model.imgYol)" alt="@Model.imgYol" asp-append-version="true" class="img-thumbnail" />
